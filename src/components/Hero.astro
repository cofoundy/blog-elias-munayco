---
import { siteConfig } from "../config";
---

<!-- Top Navy Bar with Shimmer -->
<div class="w-full h-3 olive-bar-shimmer"></div>

<section
  id="hero"
  class="relative py-16 md:py-20 lg:py-24"
  style={`background-color: ${siteConfig.colors.creamLight}`}
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Main Hero Content -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 lg:gap-12 items-center">
      <!-- Photo Column -->
      <div class="md:col-span-4 flex justify-center md:justify-start order-2 md:order-1">
        <div class="relative hero-photo">
          <!-- Decorative background -->
          <div
            class="absolute -inset-4 rounded-2xl"
            style={`background: linear-gradient(135deg, ${siteConfig.colors.navy}15 0%, ${siteConfig.colors.teal}15 100%)`}
          ></div>
          <img
            src="/profile.webp"
            alt={siteConfig.name}
            class="relative w-56 h-56 md:w-64 md:h-64 lg:w-72 lg:h-72 object-cover rounded-2xl shadow-2xl"
            style={`border: 3px solid ${siteConfig.colors.teal}`}
          />
          <!-- PRCP Badge -->
          <div
            class="absolute -bottom-3 -right-3 px-4 py-2 rounded-lg shadow-lg"
            style={`background-color: ${siteConfig.colors.navy}; color: white`}
          >
            <span class="text-xs font-bold tracking-wider">SENIOR @ PRCP</span>
          </div>
        </div>
      </div>

      <!-- Text Content Column -->
      <div class="md:col-span-8 order-1 md:order-2 text-center md:text-left">
        <!-- Name -->
        <h1
          class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight"
          style={`color: ${siteConfig.accentColor}; font-family: 'Raleway', sans-serif;`}
        >
          {siteConfig.name}
        </h1>

        <!-- Separator -->
        <div
          class="w-24 h-1.5 my-4 mx-auto md:mx-0 rounded-full"
          style={`background-color: ${siteConfig.colors.teal}`}
        ></div>

        <!-- Title + Badge -->
        <div class="hero-subtitle flex flex-wrap items-center justify-center md:justify-start gap-3 mb-4">
          <span
            class="text-xl md:text-2xl font-medium"
            style={`color: ${siteConfig.colors.navy}; font-family: 'Raleway', sans-serif;`}
          >
            {siteConfig.title}
          </span>
          <span
            class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium"
            style={`background-color: ${siteConfig.colors.teal}; color: white`}
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
            </svg>
            Odisea Laboral
          </span>
        </div>

        <!-- Value Proposition -->
        <p
          class="hero-description text-lg md:text-xl text-gray-700 leading-relaxed mb-8 max-w-xl mx-auto md:mx-0"
          style="font-family: 'Montserrat', sans-serif;"
        >
          <strong style={`color: ${siteConfig.accentColor}`}>Resuelvo conflictos laborales antes de que lleguen a juicio.</strong>
          <br class="hidden md:block" />
          Acompaño a empresas y áreas de RRHH en la toma de decisiones laborales sensibles.
        </p>

        <!-- CTAs -->
        <div class="hero-cta flex flex-col sm:flex-row gap-4 justify-center md:justify-start mb-8">
          <a
            href={`mailto:${siteConfig.social?.email}?subject=Consulta Laboral`}
            class="btn-hover inline-flex items-center justify-center gap-2 px-8 py-4 rounded-full text-white font-semibold text-lg shadow-lg"
            style={`background-color: ${siteConfig.colors.teal}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Escríbeme
          </a>
          <a
            href={siteConfig.social?.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-hover inline-flex items-center justify-center gap-2 px-8 py-4 rounded-full font-semibold text-lg border-2"
            style={`border-color: ${siteConfig.colors.navy}; color: ${siteConfig.colors.navy}`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            Ver en YouTube
          </a>
        </div>

        <!-- Social Links -->
        <div class="hero-social flex gap-3 justify-center md:justify-start">
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="icon-hover w-11 h-11 rounded-full flex items-center justify-center transition-all"
              style={`background-color: ${siteConfig.accentColor}; color: white`}
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="icon-hover w-11 h-11 rounded-full flex items-center justify-center transition-all"
              style={`background-color: ${siteConfig.accentColor}; color: white`}
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Trust Bar -->
    <div
      class="hero-stats mt-16 py-6 px-8 rounded-2xl grid grid-cols-3 gap-4 md:gap-8"
      style={`background-color: ${siteConfig.colors.navy}08; border: 1px solid ${siteConfig.colors.navy}15`}
    >
      <div class="text-center stat-number">
        <div
          class="text-2xl md:text-3xl font-bold"
          style={`color: ${siteConfig.colors.teal}`}
        >10+</div>
        <div class="text-xs md:text-sm text-gray-600 font-medium">Años de experiencia</div>
      </div>
      <div class="text-center stat-number border-x" style={`border-color: ${siteConfig.colors.navy}20`}>
        <div
          class="text-2xl md:text-3xl font-bold"
          style={`color: ${siteConfig.colors.teal}`}
        >2</div>
        <div class="text-xs md:text-sm text-gray-600 font-medium">Maestrías en Derecho</div>
      </div>
      <div class="text-center stat-number">
        <div
          class="text-2xl md:text-3xl font-bold"
          style={`color: ${siteConfig.colors.teal}`}
        >PRCP</div>
        <div class="text-xs md:text-sm text-gray-600 font-medium">Top Firma en Perú</div>
      </div>
    </div>
  </div>
</section>
