---
import { siteConfig } from "../config";
---

<!-- Top Navy Bar with Shimmer -->
<div class="w-full h-3 olive-bar-shimmer"></div>

<section
  id="hero"
  class="relative py-12 md:py-16 lg:py-20"
  style={`background-color: ${siteConfig.colors.creamLight}`}
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Main Hero Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Photo - Large Square -->
      <div class="order-2 md:order-1 flex justify-center md:justify-start">
        <div class="relative hero-photo">
          <div
            class="absolute -inset-3 rounded-2xl opacity-20"
            style={`background-color: ${siteConfig.colors.navy}`}
          ></div>
          <img
            src={`${import.meta.env.BASE_URL}/profile.png`}
            alt={siteConfig.name}
            class="relative w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 object-cover rounded-2xl shadow-xl"
            style={`border: 4px solid ${siteConfig.colors.teal}`}
          />
        </div>
      </div>

      <!-- Text Content -->
      <div class="order-1 md:order-2 text-center md:text-left">
        <!-- Podcast Badge -->
        <div
          class="hero-photo inline-flex items-center gap-2 px-4 py-2 rounded-full mb-4"
          style={`background-color: ${siteConfig.colors.navy}15; border: 1px solid ${siteConfig.colors.navy}30`}
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" style={`color: ${siteConfig.colors.teal}`}>
            <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
          </svg>
          <span class="text-sm font-medium" style={`color: ${siteConfig.accentColor}`}>Cofundador de Odisea Laboral</span>
        </div>

        <h1
          class="hero-title text-3xl md:text-4xl lg:text-5xl font-normal tracking-widest uppercase"
          style={`color: ${siteConfig.accentColor}; font-family: 'Raleway', sans-serif;`}
        >
          {siteConfig.name}
        </h1>
        <p
          class="hero-subtitle text-xl md:text-2xl font-light mt-2 mb-3"
          style={`color: ${siteConfig.colors.navy}; font-family: 'Raleway', sans-serif;`}
        >
          {siteConfig.title}
        </p>
        <div
          class="w-20 h-1 mb-4 mx-auto md:mx-0 rounded-full"
          style={`background-color: ${siteConfig.colors.teal}`}
        ></div>
        <p class="hero-description text-base md:text-lg text-gray-600 leading-relaxed mb-6 max-w-md mx-auto md:mx-0">
          Conectando el Derecho Laboral con los retos cotidianos de la gestión humana. Escribo sobre relaciones laborales, compliance y habilidades blandas.
        </p>

        <!-- CTA Button -->
        <a
          href={`mailto:${siteConfig.social?.email}?subject=Consulta`}
          class="hero-cta btn-hover inline-flex items-center gap-2 px-6 py-3 rounded-full text-white font-medium mb-6"
          style={`background-color: ${siteConfig.colors.teal}`}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Escríbeme
        </a>

        <!-- Social Links -->
        <div class="hero-social flex gap-4 justify-center md:justify-start">
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="icon-hover w-10 h-10 rounded-full flex items-center justify-center"
              style={`background-color: ${siteConfig.accentColor}; color: white`}
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </a>
          )}
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="icon-hover w-10 h-10 rounded-full flex items-center justify-center"
              style={`background-color: ${siteConfig.accentColor}; color: white`}
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
          {siteConfig.social?.youtube && (
            <a
              href={siteConfig.social.youtube}
              target="_blank"
              rel="noopener noreferrer"
              class="icon-hover w-10 h-10 rounded-full flex items-center justify-center"
              style={`background-color: ${siteConfig.accentColor}; color: white`}
              aria-label="YouTube - Odisea Laboral"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Stats Row -->
    <div class="hero-stats grid grid-cols-3 gap-4 md:gap-8 mt-12 pt-8 border-t" style={`border-color: ${siteConfig.colors.navy}30`}>
      <div class="text-center stat-number">
        <div
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.colors.teal}`}
        >10+</div>
        <div class="text-sm md:text-base text-gray-600">Años de experiencia</div>
      </div>
      <div class="text-center stat-number">
        <div
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.colors.teal}`}
        >PRCP</div>
        <div class="text-sm md:text-base text-gray-600">Payet, Rey, Cauvi, Pérez</div>
      </div>
      <div class="text-center stat-number">
        <div
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.colors.teal}`}
        >2</div>
        <div class="text-sm md:text-base text-gray-600">Maestrías</div>
      </div>
    </div>
  </div>
</section>

<!-- Bottom Navy Bar with Shimmer -->
<div class="w-full h-3 olive-bar-shimmer"></div>
