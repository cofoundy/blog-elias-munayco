---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section
      id="experience"
      class="py-12 md:py-16"
      style={`background-color: ${siteConfig.colors.creamLight}`}
    >
      <div class="max-w-6xl mx-auto px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-10 reveal-left">
          <h2
            class="text-3xl md:text-4xl font-bold"
            style={`color: ${siteConfig.accentColor}`}
          >
            Mi Trayectoria
          </h2>
          <div
            class="w-16 h-1 mt-3 rounded-full"
            style={`background-color: ${siteConfig.colors.teal}`}
          ></div>
        </div>

        <!-- Horizontal Timeline (Desktop) -->
        <div class="hidden md:block relative mb-8 reveal stagger-1">
          <div class="flex justify-between items-start">
            {siteConfig.experience.map((exp, index, arr) => (
              <div class="relative flex flex-col items-center" style="flex: 1">
                {/* Timeline line segment - not on the last item */}
                {index < arr.length - 1 && (
                  <div
                    class="absolute top-4 left-1/2 w-full h-0.5"
                    style={`background-color: ${siteConfig.colors.navy}30`}
                  ></div>
                )}
                {/* Circle */}
                <div
                  class="relative w-8 h-8 rounded-full flex items-center justify-center z-10 timeline-dot"
                  style={`background-color: ${siteConfig.colors.teal}`}
                >
                  <span class="text-white text-xs font-bold">{index + 1}</span>
                </div>
                {/* Text below */}
                <div class="mt-4 text-center w-full px-2">
                  <p
                    class="text-sm font-semibold"
                    style={`color: ${siteConfig.colors.teal}`}
                  >
                    {exp.dateRange.split(' - ')[0]}
                  </p>
                  <p
                    class="text-xs mt-1 leading-tight"
                    style={`color: ${siteConfig.colors.navy}`}
                  >
                    {exp.company === "Payet, Rey, Cauvi, PÃ©rez Abogados" ? "PRCP Abogados" :
                     exp.company === "Poder Judicial - Corte Suprema" ? "Corte Suprema" :
                     exp.company === "Poder Judicial - Corte Superior" ? "Corte Superior" :
                     exp.company}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Experience Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
          {siteConfig.experience.map((exp, index) => (
            <div
              class={`reveal stagger-${index + 2} card-hover p-5 rounded-xl`}
              style={`background-color: white; border: 1px solid ${siteConfig.colors.navy}20`}
            >
              <div class="flex items-start justify-between mb-3">
                <div>
                  <h3
                    class="text-lg font-semibold"
                    style={`color: ${siteConfig.accentColor}`}
                  >
                    {exp.title}
                  </h3>
                  <p
                    class="text-base font-medium"
                    style={`color: ${siteConfig.colors.teal}`}
                  >
                    {exp.company}
                  </p>
                </div>
                <span
                  class="text-xs px-3 py-1 rounded-full"
                  style={`background-color: ${siteConfig.colors.cream}; color: ${siteConfig.colors.navy}`}
                >
                  {exp.dateRange}
                </span>
              </div>
              <ul class="space-y-1.5">
                {exp.bullets.slice(0, 2).map((bullet) => (
                  <li class="flex items-start text-sm text-gray-600">
                    <span
                      class="inline-block w-1.5 h-1.5 rounded-full mt-1.5 mr-2 flex-shrink-0"
                      style={`background-color: ${siteConfig.colors.teal}`}
                    />
                    {bullet}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
