---
import { siteConfig } from "../config";
---

<section
  id="about"
  class="py-12 md:py-16"
  style={`background-color: ${siteConfig.colors.cream}`}
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
      <!-- Title Column -->
      <div class="lg:col-span-3 reveal-left">
        <h2
          class="text-3xl md:text-4xl font-bold"
          style={`color: ${siteConfig.accentColor}`}
        >
          Sobre Mi
        </h2>
        <div
          class="w-16 h-1 mt-3 rounded-full"
          style={`background-color: ${siteConfig.colors.teal}`}
        ></div>
      </div>

      <!-- Content Column -->
      <div class="lg:col-span-5 reveal stagger-1">
        <p class="text-base md:text-lg text-gray-700 leading-relaxed">
          {siteConfig.aboutMe}
        </p>
      </div>

      <!-- Quote Column -->
      <div class="lg:col-span-4 reveal-scale stagger-2">
        <blockquote
          class="quote-float relative p-6 rounded-xl"
          style={`background-color: ${siteConfig.colors.teal}15; border-left: 4px solid ${siteConfig.colors.teal}`}
        >
          <p
            class="text-lg md:text-xl font-medium italic"
            style={`color: ${siteConfig.accentColor}`}
          >
            "Conectando el Derecho con la gestión humana"
          </p>
          <footer class="mt-3 text-sm text-gray-600">
            — Elías Munayco
          </footer>
        </blockquote>
      </div>
    </div>

    <!-- Skills -->
    <div class="mt-10 pt-8 border-t reveal stagger-3" style={`border-color: ${siteConfig.colors.navy}20`}>
      <h3
        class="text-sm font-semibold uppercase tracking-wider mb-4"
        style={`color: ${siteConfig.colors.navy}`}
      >
        Especialidades
      </h3>
      <div class="flex flex-wrap gap-2">
        {siteConfig.skills.map((skill, index) => (
          <span
            class={`skill-hover px-4 py-2 rounded-full text-sm font-medium cursor-default stagger-${Math.min(index % 6 + 1, 6)}`}
            style={`background-color: white; color: ${siteConfig.accentColor}; border: 1px solid ${siteConfig.colors.navy}40`}
          >
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
