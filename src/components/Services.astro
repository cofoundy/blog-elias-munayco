---
import { siteConfig } from "../config";

const services = [
  {
    icon: "building",
    title: "Empresas",
    description: "Gestión de relaciones laborales, políticas internas, procedimientos disciplinarios y defensa ante inspecciones.",
    items: ["Contratos y políticas", "Despidos y ceses", "Inspecciones SUNAFIL", "Due diligence laboral"]
  },
  {
    icon: "user",
    title: "Trabajadores",
    description: "Defensa de derechos laborales, negociación de salidas y asesoría en conflictos con empleadores.",
    items: ["Despidos arbitrarios", "Beneficios sociales", "Hostigamiento laboral", "Negociaciones"]
  },
  {
    icon: "academic",
    title: "Capacitación",
    description: "Talleres y charlas para equipos de RRHH, líderes y colaboradores sobre temas laborales y soft skills.",
    items: ["Talleres in-house", "Webinars", "Compliance laboral", "Liderazgo y comunicación"]
  }
];

const iconPaths: Record<string, string> = {
  building: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
  user: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
  academic: "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
};
---

<!-- Navy Bar with Shimmer -->
<div class="w-full h-2 olive-bar-shimmer"></div>

<section
  id="services"
  class="py-16 md:py-20"
  style={`background-color: white`}
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12 reveal">
      <h2
        class="text-3xl md:text-4xl font-bold mb-4"
        style={`color: ${siteConfig.accentColor}; font-family: 'Raleway', sans-serif;`}
      >
        ¿Cómo puedo ayudarte?
      </h2>
      <div
        class="w-20 h-1.5 mx-auto rounded-full"
        style={`background-color: ${siteConfig.colors.teal}`}
      ></div>
    </div>

    <!-- Service Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div
          class={`reveal stagger-${index + 1} group card-hover p-8 rounded-2xl text-center transition-all duration-300`}
          style={`background-color: ${siteConfig.colors.creamLight}; border: 1px solid ${siteConfig.colors.navy}10`}
        >
          <!-- Icon -->
          <div
            class="w-16 h-16 mx-auto mb-6 rounded-xl flex items-center justify-center transition-all duration-300 group-hover:scale-110"
            style={`background-color: ${siteConfig.colors.teal}15`}
          >
            <svg
              class="w-8 h-8"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style={`color: ${siteConfig.colors.teal}`}
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={iconPaths[service.icon]}></path>
            </svg>
          </div>

          <!-- Title -->
          <h3
            class="text-xl font-bold mb-3"
            style={`color: ${siteConfig.accentColor}; font-family: 'Raleway', sans-serif;`}
          >
            {service.title}
          </h3>

          <!-- Description -->
          <p class="text-gray-600 text-sm mb-6 leading-relaxed">
            {service.description}
          </p>

          <!-- Items List -->
          <ul class="space-y-2 text-left">
            {service.items.map((item) => (
              <li class="flex items-center gap-2 text-sm text-gray-700">
                <svg
                  class="w-4 h-4 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  style={`color: ${siteConfig.colors.teal}`}
                >
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12 reveal stagger-4">
      <a
        href={`mailto:${siteConfig.social?.email}?subject=Consulta sobre servicios`}
        class="btn-hover inline-flex items-center gap-2 px-8 py-4 rounded-full font-semibold text-lg"
        style={`background-color: ${siteConfig.colors.navy}; color: white`}
      >
        Cuéntame tu caso
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
