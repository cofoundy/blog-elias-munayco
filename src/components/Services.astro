---
import { siteConfig } from "../config";

const services = [
  {
    icon: "building",
    title: "Empresas",
    description: "Analizo cómo las empresas diseñan y aplican políticas laborales, procedimientos disciplinarios y estrategias frente a la inspección del trabajo. El objetivo es extraer lecciones de la jurisprudencia y de la normativa para mejorar la calidad de las relaciones laborales dentro de las organizaciones.",
    items: ["Políticas internas y reglamentos de trabajo", "Despidos y ceses en la práctica judicial", "Actuación empresarial ante SUNAFIL", "Due diligence laboral como herramienta de prevención"]
  },
  {
    icon: "user",
    title: "Trabajadores",
    description: "Estudio casos y sentencias sobre protección de derechos laborales, beneficios sociales, hostigamiento y negociación de salidas. Me interesa entender cómo estos criterios judiciales modifican el equilibrio entre empleadores y trabajadores y qué estándares de protección se van construyendo.",
    items: ["Despidos arbitrarios y reposición", "Beneficios sociales y carga de la prueba", "Hostigamiento laboral y carga de la prueba", "Acuerdos y negociaciones de salida"]
  },
  {
    icon: "academic",
    title: "Capacitación",
    description: "Este blog también recoge ideas y esquemas que utilizo en charlas, clases y espacios de formación sobre relaciones laborales, liderazgo y cumplimiento. Más que ofrecer servicios, busco compartir materiales y enfoques que puedan inspirar procesos de aprendizaje dentro de las organizaciones.",
    items: ["Esquemas y mapas conceptuales de temas laborales", "Guías para discutir casos con equipos de RR.HH.", "Puntos clave de compliance laboral", "Notas sobre liderazgo, comunicación y cultura"]
  }
];

const iconPaths: Record<string, string> = {
  building: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
  user: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
  academic: "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
};
---

<!-- Navy Bar with Shimmer -->
<div class="w-full h-2 olive-bar-shimmer"></div>

<section
  id="services"
  class="py-16 md:py-20"
  style={`background-color: white`}
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12 reveal">
      <h2
        class="text-3xl md:text-4xl font-bold mb-4"
        style={`color: ${siteConfig.accentColor}; font-family: 'Raleway', sans-serif;`}
      >
        ¿Sobre qué temas trato en el blog?
      </h2>
      <div
        class="w-20 h-1.5 mx-auto rounded-full"
        style={`background-color: ${siteConfig.colors.teal}`}
      ></div>
    </div>

    <!-- Service Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div
          class={`reveal stagger-${index + 1} group card-hover p-8 rounded-2xl text-center transition-all duration-300`}
          style={`background-color: ${siteConfig.colors.creamLight}; border: 1px solid ${siteConfig.colors.navy}10`}
        >
          <!-- Icon -->
          <div
            class="w-16 h-16 mx-auto mb-6 rounded-xl flex items-center justify-center transition-all duration-300 group-hover:scale-110"
            style={`background-color: ${siteConfig.colors.teal}15`}
          >
            <svg
              class="w-8 h-8"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              style={`color: ${siteConfig.colors.teal}`}
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={iconPaths[service.icon]}></path>
            </svg>
          </div>

          <!-- Title -->
          <h3
            class="text-xl font-bold mb-3"
            style={`color: ${siteConfig.accentColor}; font-family: 'Raleway', sans-serif;`}
          >
            {service.title}
          </h3>

          <!-- Description -->
          <p class="text-gray-600 text-sm mb-6 leading-relaxed">
            {service.description}
          </p>

          <!-- Items List -->
          <ul class="space-y-2 text-left">
            {service.items.map((item) => (
              <li class="flex items-center gap-2 text-sm text-gray-700">
                <svg
                  class="w-4 h-4 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  style={`color: ${siteConfig.colors.teal}`}
                >
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

  </div>
</section>
